{
  "name": "carboncode",
  "version": "3.0.0",
  "description": "CarbonCode - A lightweight, offline C++ IDE built with Electron, React, and Monaco Editor",
  "main": "dist-electron/main.js",
  "author": "Rabail Ali Bhatti",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder --win",
    "build:lite": "vite build && electron-builder --win --config electron-builder-lite.json",
    "build:full": "vite build && electron-builder --win --config electron-builder-full.json",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@types/uuid": "^10.0.0",
    "monaco-editor": "^0.45.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "extraResources": [
      {
        "from": "vendor/mingw64",
        "to": "mingw64"
      }
    ],
    "appId": "com.rabailalibhatti.carboncode",
    "productName": "CarbonCode",
    "copyright": "Copyright Â© 2026 Rabail Ali Bhatti",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "artifactName": "CarbonCode-Setup-${version}.${ext}",
      "forceCodeSigning": false,
      "publisherName": "Rabail Ali Bhatti",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CarbonCode",
      "uninstallDisplayName": "CarbonCode - C++ IDE",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}